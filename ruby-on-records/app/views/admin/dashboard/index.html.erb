<% content_for :title, "Dashboard - Backstore" %>

<!-- Welcome Section -->
<div class="mb-8">
  <h1 class="font-display text-4xl font-bold text-vinyl-black mb-2">Dashboard</h1>
  <p class="text-sepia">Bienvenido al panel de administracion, <span class="text-vinyl-black font-bold"><%= current_user.full_name %></span></p>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
  <!-- Discos Card -->
  <div class="card-retro overflow-hidden">
    <div class="bg-vinyl-black p-6 text-center">
      <div class="w-16 h-16 vinyl-record mx-auto mb-2"></div>
    </div>
    <div class="p-6 bg-paper text-center">
      <p class="font-display text-4xl font-bold text-vinyl-black mb-1"><%= @total_disks %></p>
      <p class="text-sepia text-sm uppercase tracking-wider">Discos</p>
      <%= link_to "Ver todos", admin_disks_path, class: "btn-primary w-full mt-4 text-xs" %>
    </div>
  </div>

  <!-- Ventas Card -->
  <div class="card-retro overflow-hidden">
    <div class="bg-teal p-6 text-center">
      <div class="w-16 h-16 flex items-center justify-center mx-auto">
        <svg class="w-12 h-12 text-cream" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
    </div>
    <div class="p-6 bg-paper text-center">
      <p class="font-display text-4xl font-bold text-vinyl-black mb-1"><%= @total_sales %></p>
      <p class="text-sepia text-sm uppercase tracking-wider">Ventas</p>
      <%= link_to "Ver todas", admin_sales_path, class: "btn-primary w-full mt-4 text-xs" %>
    </div>
  </div>

  <!-- Clientes Card -->
  <div class="card-retro overflow-hidden">
    <div class="bg-mustard p-6 text-center">
      <div class="w-16 h-16 flex items-center justify-center mx-auto">
        <svg class="w-12 h-12 text-vinyl-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
      </div>
    </div>
    <div class="p-6 bg-paper text-center">
      <p class="font-display text-4xl font-bold text-vinyl-black mb-1"><%= @total_clients %></p>
      <p class="text-sepia text-sm uppercase tracking-wider">Clientes</p>
      <%= link_to "Ver todos", admin_clients_path, class: "btn-primary w-full mt-4 text-xs" %>
    </div>
  </div>

  <% if can? :manage, User %>
    <!-- Usuarios Card -->
    <div class="card-retro overflow-hidden">
      <div class="bg-burgundy p-6 text-center">
        <div class="w-16 h-16 flex items-center justify-center mx-auto">
          <svg class="w-12 h-12 text-cream" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
          </svg>
        </div>
      </div>
      <div class="p-6 bg-paper text-center">
        <p class="font-display text-4xl font-bold text-vinyl-black mb-1"><%= @total_users %></p>
        <p class="text-sepia text-sm uppercase tracking-wider">Usuarios</p>
        <%= link_to "Gestionar", admin_users_path, class: "btn-primary w-full mt-4 text-xs" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Recent Disks Table -->
<% if @recent_disks.any? %>
  <div class="card-retro overflow-hidden">
    <div class="bg-vinyl-black px-6 py-4 flex items-center justify-between">
      <h2 class="font-display text-xl font-bold text-mustard">Discos Recientes</h2>
      <%= link_to "Ver todos", admin_disks_path, class: "text-cream hover:text-mustard text-xs uppercase tracking-wider font-bold transition-colors" %>
    </div>
    
    <div class="overflow-x-auto">
      <table class="table-retro">
        <thead>
          <tr>
            <th>Titulo</th>
            <th>Artista</th>
            <th>Precio</th>
            <th>Stock</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_disks.each do |disk| %>
            <tr>
              <td>
                <%= link_to disk.title, [:admin, disk], class: "text-mustard-dark hover:text-mustard font-bold transition-colors" %>
              </td>
              <td class="text-sepia"><%= disk.artist %></td>
              <td class="font-bold">$<%= number_to_currency(disk.price, unit: '', delimiter: '.', precision: 0) %></td>
              <td>
                <span class="badge-retro <%= disk.stock > 0 ? 'bg-teal text-cream' : 'bg-rust text-cream' %>">
                  <%= disk.stock %>
                </span>
              </td>
              <td>
                <span class="badge-retro <%= disk.state == 'Nuevo' ? 'bg-cream text-vinyl-black' : 'bg-sepia text-cream' %>">
                  <%= disk.state %>
                </span>
              </td>
              <td>
                <div class="flex items-center gap-2">
                  <%= link_to edit_admin_disk_path(disk), class: "text-mustard-dark hover:text-mustard transition-colors" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                  <%= button_to [:admin, disk], method: :delete, form: { data: { turbo_confirm: "Estas seguro de eliminar este disco?" } }, class: "text-rust hover:text-rust-dark transition-colors" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
