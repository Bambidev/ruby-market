<% content_for :title, "Géneros - Backstore" %>

<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
  <div>
    <h1 class="font-display text-4xl font-bold text-vinyl-black mb-2">Géneros</h1>
    <p class="text-sepia">Categorías musicales disponibles</p>
  </div>
  <%= link_to "Nuevo Género", new_admin_genre_path, class: "btn-primary inline-flex items-center gap-2" %>
</div>

<% if @genres.any? %>
  <div class="card-retro overflow-hidden">
    <div class="overflow-x-auto">
      <table class="table-retro">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Discos</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="font-bold text-lg"><%= genre.genre_name %></td>
              <td>
                <span class="inline-block px-3 py-1 text-sm font-bold rounded-full bg-mustard/20 text-vinyl-black">
                  <%= genre.disks.count %> disco(s)
                </span>
              </td>
              <td>
                <div class="flex items-center gap-3">
                  <%= link_to "Ver", [:admin, genre], class: "text-mustard-dark hover:text-mustard font-bold uppercase text-xs tracking-wider transition-colors" %>
                  <%= link_to "Editar", edit_admin_genre_path(genre), class: "text-teal hover:text-teal-dark font-bold uppercase text-xs tracking-wider transition-colors" %>
                  <% if genre.disks.empty? %>
                    <%= button_to "Eliminar", [:admin, genre], 
                        method: :delete,
                        form: { data: { turbo_confirm: "¿Eliminar el género '#{genre.genre_name}'?" } },
                        class: "text-rust hover:text-rust/70 font-bold uppercase text-xs tracking-wider transition-colors" %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="card-retro p-12 text-center">
    <svg class="w-16 h-16 mx-auto mb-4 text-sepia" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
    </svg>
    <h3 class="font-display text-2xl font-bold text-vinyl-black mb-2">No hay géneros</h3>
    <p class="text-sepia mb-6">Crea el primer género musical</p>
    <%= link_to "Nuevo Género", new_admin_genre_path, class: "btn-primary" %>
  </div>
<% end %>
