<%= form_with(model: [:admin, client], class: "space-y-6") do |form| %>
  <% if client.errors.any? %>
    <div class="bg-rust/10 border-2 border-rust p-4">
      <div class="flex items-center gap-3 mb-3">
        <svg class="w-5 h-5 text-rust" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <span class="font-bold text-rust uppercase tracking-wider text-sm">
          <%= pluralize(client.errors.count, "error") %> impidieron guardar este cliente
        </span>
      </div>
      <ul class="list-disc list-inside text-rust text-sm space-y-1">
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Nombre Completo -->
    <div class="lg:col-span-2">
      <%= form.label :name, "Nombre Completo", class: "label-retro" %>
      <%= form.text_field :name, 
          placeholder: "Ej: Juan Pérez", 
          required: true, 
          minlength: 2,
          maxlength: 100,
          class: "input-retro" %>
      <p class="text-xs text-vinyl-dark/60 mt-1">Nombre y apellido del cliente</p>
    </div>

    <!-- DNI -->
    <div>
      <%= form.label :dni, "DNI", class: "label-retro" %>
      <%= form.text_field :dni, 
          placeholder: "Ej: 12345678", 
          required: true,
          pattern: "[0-9]+",
          class: "input-retro" %>
      <p class="text-xs text-vinyl-dark/60 mt-1">Solo números, sin puntos ni guiones</p>
    </div>

    <!-- Email -->
    <div>
      <%= form.label :email, "Email", class: "label-retro" %>
      <%= form.email_field :email, 
          placeholder: "Ej: juan@email.com", 
          class: "input-retro" %>
      <p class="text-xs text-vinyl-dark/60 mt-1">Opcional</p>
    </div>

    <!-- Teléfono -->
    <div class="lg:col-span-2">
      <%= form.label :phone, "Teléfono", class: "label-retro" %>
      <%= form.telephone_field :phone, 
          placeholder: "Ej: +54 11 1234-5678", 
          class: "input-retro" %>
      <p class="text-xs text-vinyl-dark/60 mt-1">Opcional - Puede incluir código de área</p>
    </div>
  </div>

  <!-- Botones de Acción -->
  <div class="pt-6 border-t-2 border-vinyl-groove flex flex-col sm:flex-row gap-4">
    <%= form.submit client.new_record? ? "Crear Cliente" : "Guardar Cambios", 
        class: "btn-primary cursor-pointer" %>
    <%= link_to "Cancelar", admin_clients_path, class: "btn-secondary text-center" %>
  </div>
<% end %>
