<!DOCTYPE html>
<html class="h-full">
  <head>
    <title><%= content_for(:title) || "Admin - Ruby On Records" %></title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Google Fonts - Retro Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <style>
      body { font-family: 'Space Mono', monospace; }
      h1, h2, h3, h4, h5, h6, .font-display { font-family: 'Playfair Display', serif; }
    </style>
  </head>

  <body class="min-h-full flex flex-col bg-cream text-vinyl-black">
    <!-- Admin Header -->
    <header class="bg-burgundy text-cream border-b-4 border-mustard">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
          <!-- Logo -->
          <div class="flex-shrink-0">
            <%= link_to admin_root_path, class: "flex items-center gap-3 group" do %>
              <div class="w-12 h-12 vinyl-record"></div>
              <div class="hidden sm:block">
                <span class="text-2xl font-display font-bold text-mustard">Backstore</span>
                <span class="text-xs text-cream/60 block -mt-1">Panel de Admin</span>
              </div>
            <% end %>
          </div>

          <!-- Navigation Links - Desktop -->
          <div class="hidden lg:flex items-center space-x-1">
            <%= link_to "Dashboard", admin_root_path, class: "px-4 py-2 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Discos", admin_disks_path, class: "px-4 py-2 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Ventas", admin_sales_path, class: "px-4 py-2 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Clientes", admin_clients_path, class: "px-4 py-2 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Generos", admin_genres_path, class: "px-4 py-2 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <% if can? :manage, User %>
              <%= link_to "Usuarios", admin_users_path, class: "px-4 py-2 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <% end %>
          </div>

          <!-- User Menu -->
          <div class="flex items-center gap-4">
            <div class="relative group">
              <button class="flex items-center gap-2 px-4 py-2 text-cream hover:text-mustard uppercase text-sm tracking-wider font-bold">
                <%= current_user.full_name %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div class="absolute right-0 mt-0 w-48 bg-burgundy-dark border-2 border-mustard hidden group-hover:block z-50">
                <%= link_to root_path, class: "block px-4 py-3 text-cream hover:bg-mustard hover:text-vinyl-black transition-colors uppercase text-sm tracking-wider" do %>
                  Ver Tienda
                <% end %>
                <%= button_to "Cerrar Sesion", logout_path, method: :delete, class: "w-full text-left px-4 py-3 text-cream hover:bg-rust hover:text-white transition-colors uppercase text-sm tracking-wider" %>
              </div>
            </div>

            <!-- Mobile menu button -->
            <button class="lg:hidden p-2 text-cream hover:text-mustard" onclick="document.getElementById('admin-mobile-menu').classList.toggle('hidden')">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Menu -->
        <div id="admin-mobile-menu" class="hidden lg:hidden pb-4 border-t border-burgundy-dark">
          <div class="flex flex-col space-y-1 pt-4">
            <%= link_to "Dashboard", admin_root_path, class: "px-4 py-3 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Discos", admin_disks_path, class: "px-4 py-3 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Ventas", admin_sales_path, class: "px-4 py-3 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Clientes", admin_clients_path, class: "px-4 py-3 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Generos", admin_genres_path, class: "px-4 py-3 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <% if can? :manage, User %>
              <%= link_to "Usuarios", admin_users_path, class: "px-4 py-3 text-cream hover:text-mustard hover:bg-burgundy-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="bg-teal border-b-4 border-teal-dark text-white px-4 py-3">
        <div class="max-w-7xl mx-auto flex items-center gap-3">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="font-bold uppercase tracking-wider text-sm"><%= notice %></span>
        </div>
      </div>
    <% end %>

    <% if alert %>
      <div class="bg-rust border-b-4 border-rust-dark text-white px-4 py-3">
        <div class="max-w-7xl mx-auto flex items-center gap-3">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <span class="font-bold uppercase tracking-wider text-sm"><%= alert %></span>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="flex-1">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <%= yield %>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-vinyl-black text-cream border-t-4 border-burgundy mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
          <div class="flex items-center gap-3">
            <div class="w-6 h-6 vinyl-record"></div>
            <span class="text-sm font-display text-mustard">Ruby On Records - Backstore</span>
          </div>
          <p class="text-cream/50 text-xs uppercase tracking-widest">
            &copy; <%= Time.current.year %> Panel de Administracion
          </p>
        </div>
      </div>
    </footer>


  </body>
</html>
