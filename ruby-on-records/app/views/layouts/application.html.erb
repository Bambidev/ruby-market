<!DOCTYPE html>
<html class="h-full">
  <head>
    <title><%= content_for(:title) || "Ruby On Records" %></title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Ruby On Records">
    <meta name="mobile-web-app-capable" content="yes">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <!-- Google Fonts - Retro Typography -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Space+Mono:wght@400;700&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <style>
      body { font-family: 'Space Mono', monospace; }
      h1, h2, h3, h4, h5, h6, .font-display { font-family: 'Playfair Display', serif; }
    </style>
  </head>

  <body class="min-h-full flex flex-col bg-cream text-vinyl-black">
    <!-- Header -->
    <header class="bg-vinyl-black text-cream border-b-4 border-mustard">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
          <!-- Logo -->
          <div class="flex-shrink-0">
            <%= link_to root_path, class: "flex items-center gap-3 group" do %>
              <div class="w-12 h-12 vinyl-record vinyl-spin-hover"></div>
              <span class="text-2xl font-display font-bold text-mustard hidden sm:block">
                Ruby On Records
              </span>
            <% end %>
          </div>

          <!-- Navigation Links - Desktop -->
          <div class="hidden md:flex items-center space-x-1">
            <%= link_to "Inicio", root_path, class: "px-4 py-2 text-cream hover:text-mustard hover:bg-vinyl-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Catalogo", disks_path, class: "px-4 py-2 text-cream hover:text-mustard hover:bg-vinyl-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Nuevos", disks_path(filter: "new"), class: "px-4 py-2 text-cream hover:text-mustard hover:bg-vinyl-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Usados", disks_path(filter: "used"), class: "px-4 py-2 text-cream hover:text-mustard hover:bg-vinyl-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
          </div>

          <!-- Search and User -->
          <div class="flex items-center gap-4">
            <%= form_with url: disks_path, method: :get, local: true, class: "hidden lg:block" do |f| %>
            <%= f.search_field :q,
                  value: params[:q],
                  placeholder: "Buscar...",
                  class: "px-4 py-2 bg-vinyl-dark border-2 border-vinyl-groove text-cream placeholder:text-cream/50 focus:border-mustard focus:outline-none w-48" %>
          <% end %>

            
            <% if logged_in? %>
              <div class="relative group hidden md:block">
                <button class="flex items-center gap-2 px-4 py-2 text-cream hover:text-mustard uppercase text-sm tracking-wider font-bold">
                  <%= current_user.full_name %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                <div class="absolute right-0 mt-0 w-48 bg-vinyl-dark border-2 border-mustard hidden group-hover:block z-50">
                  <%= link_to admin_root_path, class: "block px-4 py-3 text-cream hover:bg-mustard hover:text-vinyl-black transition-colors uppercase text-sm tracking-wider" do %>
                    Backstore
                  <% end %>
                  <%= button_to "Cerrar Sesion", logout_path, method: :delete, class: "w-full text-left px-4 py-3 text-cream hover:bg-rust hover:text-white transition-colors uppercase text-sm tracking-wider" %>
                </div>
              </div>
            <% else %>
              <%= link_to "Ingresar", login_path, class: "btn-primary text-xs hidden md:inline-block" %>
            <% end %>

            <!-- Mobile menu button -->
            <button class="md:hidden p-2 text-cream hover:text-mustard" onclick="document.getElementById('mobile-menu').classList.toggle('hidden')">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-vinyl-groove">
          <div class="flex flex-col space-y-1 pt-4">
            <%= link_to "Inicio", root_path, class: "px-4 py-3 text-cream hover:text-mustard hover:bg-vinyl-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Catalogo", disks_path, class: "px-4 py-3 text-cream hover:text-mustard hover:bg-vinyl-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Nuevos", disks_path(filter: "new"), class: "px-4 py-3 text-cream hover:text-mustard hover:bg-vinyl-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <%= link_to "Usados", disks_path(filter: "used"), class: "px-4 py-3 text-cream hover:text-mustard hover:bg-vinyl-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
          </div>
          
          <!-- Search (Mobile) -->
          <%= form_with url: disks_path, method: :get, data: { turbo: false }, class: "mt-4 px-4" do |f| %>
            <%= f.search_field :q, placeholder: "Buscar...", class: "w-full px-4 py-2 bg-vinyl-dark border-2 border-vinyl-groove text-cream placeholder:text-cream/50 focus:border-mustard focus:outline-none" %>
          <% end %>
          
          <!-- User Options (Mobile) -->
          <div class="border-t border-vinyl-groove mt-4 pt-4">
            <% if logged_in? %>
              <p class="px-4 py-2 text-mustard text-xs uppercase tracking-widest"><%= current_user.full_name %></p>
              <%= link_to "Backstore", admin_root_path, class: "block px-4 py-3 text-cream hover:text-mustard hover:bg-vinyl-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
              <%= button_to "Cerrar Sesion", logout_path, method: :delete, class: "w-full text-left px-4 py-3 text-rust hover:bg-rust hover:text-white transition-colors uppercase text-sm tracking-wider font-bold" %>
            <% else %>
              <%= link_to "Ingresar", login_path, class: "block px-4 py-3 text-mustard hover:text-cream hover:bg-vinyl-dark transition-colors uppercase text-sm tracking-wider font-bold" %>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="bg-teal border-b-4 border-teal-dark text-white px-4 py-3">
        <div class="max-w-7xl mx-auto flex items-center gap-3">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="font-bold uppercase tracking-wider text-sm"><%= notice %></span>
        </div>
      </div>
    <% end %>

    <% if alert %>
      <div class="bg-rust border-b-4 border-rust-dark text-white px-4 py-3">
        <div class="max-w-7xl mx-auto flex items-center gap-3">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <span class="font-bold uppercase tracking-wider text-sm"><%= alert %></span>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <main class="flex-1">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <%= yield %>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-vinyl-black text-cream border-t-4 border-mustard mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Logo & About -->
          <div>
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 vinyl-record"></div>
              <span class="text-xl font-display font-bold text-mustard">Ruby On Records</span>
            </div>
            <p class="text-cream/70 text-sm leading-relaxed">
              Tu tienda de vinilos y CDs desde 1985. Musica para el alma, calidad para los oidos.
            </p>
          </div>

          <!-- Quick Links -->
          <div>
            <h4 class="font-display font-bold text-mustard mb-4 uppercase tracking-wider">Enlaces</h4>
            <ul class="space-y-2">
              <li><%= link_to "Catalogo", disks_path, class: "text-cream/70 hover:text-mustard transition-colors text-sm" %></li>
              <li><%= link_to "Nuevos Ingresos", disks_path(filter: "new"), class: "text-cream/70 hover:text-mustard transition-colors text-sm" %></li>
              <li><%= link_to "Vinilos Usados", disks_path(filter: "used"), class: "text-cream/70 hover:text-mustard transition-colors text-sm" %></li>
            </ul>
          </div>

          <!-- Contact -->
          <div>
            <h4 class="font-display font-bold text-mustard mb-4 uppercase tracking-wider">Contacto</h4>
            <ul class="space-y-2 text-sm text-cream/70">
              <li>Av. Corrientes 1234, CABA</li>
              <li>Tel: (011) 4567-8900</li>
              <li>info@rubyonrecords.com</li>
            </ul>
          </div>
        </div>

        <div class="border-t border-vinyl-groove mt-8 pt-8 text-center">
          <p class="text-cream/50 text-xs uppercase tracking-widest">
            &copy; <%= Time.current.year %> Ruby On Records &bull; Hecho con Ruby on Rails
          </p>
        </div>
      </div>
    </footer>

    <!-- Lightbox Modal -->
    <div id="lightbox-modal" class="fixed inset-0 bg-vinyl-black/95 z-50 hidden flex items-center justify-center p-4" onclick="closeLightbox()">
      <button class="absolute top-4 right-4 text-cream hover:text-mustard transition-colors">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      <img id="lightbox-img" src="" class="max-w-full max-h-[90vh] object-contain border-4 border-mustard" onclick="event.stopPropagation()">
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        document.addEventListener('click', function(e) {
          if (e.target.classList.contains('lightbox-trigger')) {
            e.preventDefault();
            e.stopPropagation();
            openLightbox(e.target.src);
          }
        });
      });

      function openLightbox(src) {
        if (!src) return;
        const modal = document.getElementById('lightbox-modal');
        const img = document.getElementById('lightbox-img');
        img.src = src;
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }

      function closeLightbox() {
        const modal = document.getElementById('lightbox-modal');
        modal.classList.add('hidden');
        document.body.style.overflow = '';
      }

      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') closeLightbox();
      });
    </script>

    <!-- Lightbox2 Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.4/js/lightbox.min.js"></script>
  </body>
</html>
