<% content_for :title, "Todos los Discos - Ruby on Records" %>

<div class="container" style="margin-top: 2rem;">
  <hgroup>
    <h1>Catálogo Completo</h1>
    <p>Explorá toda nuestra colección de vinilos y CDs</p>
  </hgroup>

  <div class="disk-grid" style="margin-top: 2rem;">
    <% @disks.each do |disk| %>
      <%= render 'shared/disk_card', disk: disk %>
    <% end %>
  </div>

  <% if @disks.empty? %>
    <article style="text-align: center; margin-top: 3rem;">
      <h3>No hay discos disponibles</h3>
      <p>Volvé pronto para ver nuevos productos</p>
    </article>
  <% end %>
</div>
